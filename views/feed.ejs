<% include ./partials/header.ejs %>
    <% include ./navigation-bar %>

        <div class="container mx-auto p-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <% found_post.forEach(function(elem){ %>
                    <div class="box">
                        <img src="/images/uploads/<%= elem.image %>" alt="image"
                            class="w-full h-auto">
                    
                    <div class="caption p-2 text-center  shadow-md"><%= elem.title %></div>
                    <div class="caption p-2 text-center  shadow-md"><%= elem.description %></div>
                </div>

               <% }) %>
                
            </div>
        </div>



        <% include ./partials/footer.ejs %>